<div class="row justify-content-center mt-5">
  <div class="col-md-6 text-center">
    <div class="card shadow-sm">
      <div class="card-body py-5">
        <h1 class="display-1 text-danger mb-4">{{statusCode}}</h1>
        <h3 class="mb-3">
          {{#if (eq statusCode 404)}}
            <i class="bi bi-question-circle me-2"></i>Page Not Found
          {{else}}
            <i class="bi bi-exclamation-triangle me-2"></i>Error Occurred
          {{/if}}
        </h3>
        <p class="text-muted mb-4">{{message}}</p>

        {{#if showStack}}
          <div class="alert alert-secondary text-start">
            <small><pre class="mb-0">{{stack}}</pre></small>
          </div>
        {{/if}}

        <a href="/" class="btn btn-primary">
          <i class="bi bi-house me-2"></i>Back to Home
        </a>
      </div>
    </div>
  </div>
</div>