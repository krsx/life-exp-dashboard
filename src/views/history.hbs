<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">Historical Trends</li>
      </ol>
    </nav>

    <h2 class="mb-4">
      <i class="bi bi-graph-up text-primary me-2"></i>Historical Trends Per
      Country
    </h2>
    <p class="text-muted mb-4">
      Select a country to view its life expectancy data over the years.
    </p>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <i class="bi bi-filter me-2"></i>Select Country
      </div>
      <div class="card-body">
        <div class="mb-3">
          <label for="country_code" class="form-label">Country</label>
          <select
            id="country_code"
            name="country_code"
            class="form-select"
            hx-get="/stats/history"
            hx-trigger="change"
            hx-target="#result-container"
            hx-indicator="#loading"
          >
            <option value="">Choose a country...</option>
            {{#each countries}}
              <option value="{{this.code}}">{{this.name}}</option>
            {{/each}}
          </select>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="card shadow-sm">
      <div class="card-header">
        <i class="bi bi-table me-2"></i>Results
        <div id="loading" class="htmx-indicator float-end">
          <div
            class="spinner-border spinner-border-sm text-primary"
            role="status"
          >
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      </div>
      <div class="card-body" id="result-container">
        <div class="text-center text-muted py-5">
          <i class="bi bi-hand-index display-1"></i>
          <p class="mt-3">Select a country to view data</p>
        </div>
      </div>
    </div>
  </div>
</div>