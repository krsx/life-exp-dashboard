<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">Regional Analysis</li>
      </ol>
    </nav>

    <h2 class="mb-4">
      <i class="bi bi-diagram-3 text-warning me-2"></i>Regional "Weakest Link"
      Analysis
    </h2>
    <p class="text-muted mb-4">
      Select a region and year to see the minimum life expectancy in each
      sub-region.
    </p>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card shadow-sm">
      <div class="card-header bg-warning">
        <i class="bi bi-filter me-2"></i>Filter Options
      </div>
      <div class="card-body">
        <form
          hx-get="/stats/region-min"
          hx-target="#result-container"
          hx-indicator="#loading"
        >
          <div class="mb-3">
            <label for="region_id" class="form-label">Region</label>
            <select
              id="region_id"
              name="region_id"
              class="form-select"
              required
            >
              <option value="">Choose a region...</option>
              {{#each regions}}
                <option value="{{this.id}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>

          <div class="mb-3">
            <label for="year" class="form-label">Year</label>
            <select id="year" name="year" class="form-select" required>
              <option value="">Choose a year...</option>
              {{#each years}}
                <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select>
          </div>

          <button type="submit" class="btn btn-warning w-100">
            <i class="bi bi-search me-2"></i>Analyze
          </button>
        </form>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="card shadow-sm">
      <div class="card-header">
        <i class="bi bi-table me-2"></i>Results
        <div id="loading" class="htmx-indicator float-end">
          <div
            class="spinner-border spinner-border-sm text-warning"
            role="status"
          >
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      </div>
      <div class="card-body" id="result-container">
        <div class="text-center text-muted py-5">
          <i class="bi bi-diagram-3 display-1"></i>
          <p class="mt-3">Select a region and year to view analysis</p>
        </div>
      </div>
    </div>
  </div>
</div>