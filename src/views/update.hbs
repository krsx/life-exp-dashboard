<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">Update Record</li>
      </ol>
    </nav>

    <h2 class="mb-4">
      <i class="bi bi-pencil-square text-primary me-2"></i>Precision Data
      Correction
    </h2>
    <p class="text-muted mb-4">
      Update an existing life expectancy record for a specific country and year.
    </p>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <i class="bi bi-pencil me-2"></i>Update Record Form
      </div>
      <div class="card-body">
        <form
          hx-put="/data/update"
          hx-target="#result-container"
          hx-indicator="#loading"
        >
          <div class="mb-3">
            <label for="country_code" class="form-label">Country</label>
            <select
              id="country_code"
              name="country_code"
              class="form-select"
              required
            >
              <option value="">Choose a country...</option>
              {{#each countries}}
                <option value="{{this.code}}">{{this.name}}
                  ({{this.code}})</option>
              {{/each}}
            </select>
          </div>

          <div class="mb-3">
            <label for="year" class="form-label">Year</label>
            <select id="year" name="year" class="form-select" required>
              <option value="">First select a country</option>
            </select>
          </div>

          <div id="current-value" class="mb-3"></div>

          <div class="mb-3">
            <label for="value" class="form-label">New Life Expectancy Value</label>
            <input
              type="number"
              id="value"
              name="value"
              class="form-control"
              step="0.01"
              min="0"
              max="150"
              placeholder="e.g., 75.50"
              required
            />
          </div>

          <div id="result-container" class="mb-3"></div>

          <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-check-lg me-2"></i>Update Record
            <span id="loading" class="htmx-indicator">
              <span
                class="spinner-border spinner-border-sm ms-2"
                role="status"
              ></span>
            </span>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  // Add event listener to update current value display when year changes
  document.addEventListener('htmx:afterSwap', function(evt) { if
  (evt.detail.target.id === 'year') { const yearSelect =
  document.getElementById('year'); const countrySelect =
  document.getElementById('country_code'); yearSelect.addEventListener('change',
  function() { if (this.value && countrySelect.value) { htmx.ajax('GET',
  '/api/value/' + countrySelect.value + '/' + this.value, { target:
  '#current-value' }); } }); } });
</script>