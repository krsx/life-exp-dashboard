<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead class="table-success">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Country</th>
        <th scope="col">Life Expectancy ({{year}})</th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
        <tr>
          <td>{{@index}}</td>
          <td>{{this.name}}</td>
          <td>
            <span class="badge bg-success fs-6">{{formatDecimal
                this.value
                2
              }}</span>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div class="text-muted mt-2">
  <small><i class="bi bi-info-circle me-1"></i>Showing
    {{data.length}}
    countries for year
    {{year}}</small>
</div>