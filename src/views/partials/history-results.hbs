<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead class="table-primary">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Year</th>
        <th scope="col">Life Expectancy (Years)</th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
        <tr>
          <td>{{@index}}</td>
          <td>{{this.year}}</td>
          <td>
            <span class="badge bg-info fs-6">{{formatDecimal
                this.value
                2
              }}</span>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div class="text-muted mt-2">
  <small><i class="bi bi-info-circle me-1"></i>Showing
    {{data.length}}
    records for
    {{countryCode}}</small>
</div>