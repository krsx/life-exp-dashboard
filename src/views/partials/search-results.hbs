<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead class="table-info">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Country</th>
        <th scope="col">Peak Life Expectancy</th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
        <tr>
          <td>{{@index}}</td>
          <td>{{this.name}}</td>
          <td>
            <span class="badge bg-info fs-6">{{formatDecimal
                this.PeakLifeExpectancy
                2
              }}</span>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div class="text-muted mt-2">
  <small>
    <i class="bi bi-search me-1"></i>
    Found
    {{data.length}}
    countries matching "{{keyword}}"
  </small>
</div>